<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimulatorScreen"
    android:background="@drawable/gridimage"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/Background">

    <ImageView
        android:id="@+id/Point"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="136dp"
        android:contentDescription="@string/fieldDirection"
        tools:srcCompat="@drawable/bluedot" />

    <ImageView
        android:id="@+id/Figure"
        android:layout_width="120dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/figureDescription"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/bluesphere" />

    <ImageView
        android:id="@+id/Arrow"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/fieldDirection"
        tools:srcCompat="@drawable/bluearrow" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ElectricField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="333dp"
            android:text="5.0 C"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>