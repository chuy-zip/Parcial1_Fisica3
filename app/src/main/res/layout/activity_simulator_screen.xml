<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SimulatorScreen">

    <LinearLayout
        android:id="@+id/GridBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gridimage"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Figure"
            android:layout_width="403dp"
            android:layout_height="411dp"
            android:contentDescription="@string/coneDescription"
            android:scaleType="fitXY"
            tools:srcCompat="@drawable/normalcone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/Arrow"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="222dp"
                android:layout_marginTop="166dp"
                android:contentDescription="@string/fieldDirection"
                android:visibility="visible"
                tools:srcCompat="@drawable/bluearrow" />

            <ImageView
                android:id="@+id/Point"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:contentDescription="@string/fieldDirection"
                android:visibility="visible"
                tools:srcCompat="@drawable/bluearrow" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>